.desc {
    word-wrap: break-word;
    word-break: break-all;
}

.part {
    position: relative;
    margin: 20rpx 0 60rpx 0;
}

.part-title {
    position: relative;
    top: 0;
    left: 20rpx;
    transform: translateY(50%);
    display: inline-block;
    padding: 10rpx 24rpx;
    color: white;
    background-color: rgb(133, 22, 14);
    font-size: 28rpx;
}

.part-main {
    border: 2rpx solid rgba(133, 22, 14, .9);
    padding: 40rpx;
}

.couple {
    display: flex;
    margin: 20rpx 0;
}

.couple view {
    width: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.phone {
    background-color: rgba(133, 22, 14, .9);
    border-radius: 20rpx;
    font-size: 24rpx;
    color: white;
    width: 196rpx !important;
    height: 56rpx;
    line-height: 1;
    font-weight: normal;
    margin-top: -30rpx;
    padding: 16rpx 0;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8rpx;
}

.phone:active {
    background-color: rgba(133, 22, 14, 1);
}

.phone-icon {
    width: 32rpx;
    height: 32rpx;
}

.call-item {
    background-color: #eee;
    border-radius: 20rpx;
    padding-left: 40rpx;
    overflow: hidden;
    height: 70rpx;
    line-height: 70rpx;
    margin: 40rpx 0;
}

.call-item:last-child {
    margin-bottom: 0;
}

.call-item button {
    float: right;
    background-color: rgba(133, 22, 14, .9);
    border-radius: 0 20rpx 20rpx 0;
    font-size: 24rpx;
    width: 120rpx !important;
    height: 100%;
    line-height: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.call-item button:active {
    background-color: rgba(133, 22, 14, 1);
}

.map {
    margin: 20rpx 0 60rpx 0;
}

.map:last-child {
    margin-bottom: 0;
}

/* 标题整体：横向 + 竖直居中 */
.map-title {
    display: flex;
    align-items: center;
    margin-bottom: 12rpx; /* 和地图的间距，可调 */
}

.map-icon {
    width: 171rpx;
    height: 62rpx;
    flex-shrink: 0;
}

.map-text {
    margin-left: 16rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.map-mask{
    position: absolute;
    width: 100%;
    height: 260rpx;
    top: 122rpx;
    left: -10rpx;
}

.map-name,
.map-address {
    line-height: 1.5;
    text-align: left;
}

.file {
    display: flex;
    align-items: center;
    height: 100rpx;
    margin: 20rpx 0 40rpx 0;
    padding: 0 20rpx 0 40rpx;
    background-color: #eee;
}

.file:last-child {
    margin-bottom: 0;
}

.file:active {
    background-color: #ddd;
}

.file image {
    width: 64rpx;
    height: 64rpx;
    margin-left: auto;
}

.info-list:last-child {
    margin-bottom: 0;
}

.day-block {
    margin-bottom: 24rpx;
}

.day-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 12rpx;
}

.info-list {
    font-size: 26rpx;
    color: #555;
    line-height: 1.8;
    margin-bottom: 6rpx;
}

.nav-label {
    font-weight: 600;
    font-size: 30rpx;   /* 标签文字 */
    color: #333;
}

.nav-text {
    font-size: 26rpx;   /* 正文 */
    color: #555;
    line-height: 1.8;
}

.nav-gap {
    margin-bottom: 20rpx;  /* 你想要的间距 */
}

.nav-tip {
    color: #A61D24;
}

.nav-bold {
    font-weight: 600;
}
